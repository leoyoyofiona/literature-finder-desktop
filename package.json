{
  "name": "literature-finder-desktop",
  "version": "0.1.3",
  "description": "Desktop app for literature search with Zotero integration",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run dist:mac",
    "dist:mac": "electron-builder -m",
    "dist:win": "electron-builder -w nsis portable --x64"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fast-xml-parser": "^5.3.7"
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1"
  },
  "build": {
    "appId": "com.example.literaturefinder",
    "productName": "学术文献检索助手",
    "artifactName": "literature-finder-${version}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "literature-finder-${version}-setup-${arch}.${ext}"
    },
    "portable": {
      "artifactName": "literature-finder-${version}-portable-${arch}.${ext}"
    }
  }
}
